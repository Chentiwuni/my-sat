extends admin_layout

block content
  .login_main_div.d-flex.justify-content-center
    .login_sub_div.rounded
      .row.justify-content-center
        .col-md-6
          h1.text-center.mb-4 ADMIN LOGIN

          // Display errors, if any
          if errors
            .alert.alert-danger
              ul
                each error in errors
                  li= error.msg

          if error
            .alert.alert-danger= error

          // Login form
          form(method='POST' action='/my-sat/admin_login')
            .form-group.mb-3
              label(for='username') Username:
              input#username.form-control(type='text', name='username', placeholder='Enter your username')

            .form-group.mb-3
              label(for='password') Password:
              input#password.form-control(type='password', name='password', placeholder='Enter your password')

            button.btn.btn-primary.btn-block(type='submit') Login
