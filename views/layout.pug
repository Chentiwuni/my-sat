doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title #{title}
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
    link(rel="stylesheet" href="/stylesheets/layout.css")
    link(rel="stylesheet" href="/stylesheets/index.css")
    link(rel="stylesheet" href="/stylesheets/login.css")
    link(rel="stylesheet" href="/stylesheets/product_detail.css")
    link(rel="stylesheet" href="/stylesheets/frequency_page.css")
    link(rel="stylesheet" href="/stylesheets/about.css")
    
  body
    .container-fluid.main-container.mt-1
      //- Nav bar section
      .row
        .col-12
          nav.navbar.navbar-expand-lg.bg-body-tertiary
              a.navbar-brand(href="/my-sat")
                span.logo_text_1.fw-bolder.fs-4.d-inline-block My-
                span.logo_text_2.fw-bolder.fs-4.d-inline-block Sat
              button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                span.navbar-toggler-icon
              .collapse.navbar-collapse(id="navbarSupportedContent")
                ul.navbar-nav.me-auto.mb-2.mb-lg-0
                  li.nav-item 
                    a.nav-link(href="/my-sat/about") About
                  li.nav-item
                    a.nav-link.active(aria-current="page" href="/my-sat") Home
                  li.nav-item
                    a.nav-link(href="/my-sat/track_satellite") Track Satellites
                  li.nav-item.dropdown
                    a.nav-link.dropdown-toggle(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") Contact
                    ul.dropdown-menu
                      li
                        a.dropdown-item(href="https://wa.me/233543328021") Whatsapp
                      li
                        a.dropdown-item(href="mailto:chienntiwuni@gmail.com") Email
                      li
                        a.dropdown-item(onclick="makeCall()") Call
                  li.nav-item.dropdown
                    a.nav-link.dropdown-toggle(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") Admin
                    ul.dropdown-menu
                      li
                        a.dropdown-item(href="/my-sat/admin_logout") Logout
                      li
                        a.dropdown-item(href="/my-sat/admin/dashboard") Dashboard
                form.d-flex(role="search")
                  input.form-control.me-2(type="search" placeholder="Search" aria-label="Search")
                  button.btn.btn-outline-success(type="submit") Search

      //- Top info section
      .top-info-container.d-flex.justify-content-between.align-items-center.mt-3
        .top-info-left.fs-4.fw-bold.ps-2
          #carouselExampleSlidesOnly.carousel.slide.carousel-fade(data-bs-ride="carousel")
            .carousel-inner
              .carousel-item.active(data-bs-interval="4000")
                | Delivery before payment.
              .carousel-item
                | Delivered at your doorstep when you order
              .carousel-item
                | Just select an item to order NOW!!!
        .top-info-right.d-md-flex
          .caller-button
            button.btn.btn-light(onclick="makeCall()") Call Installer
              i.fa-solid.fa-phone-flip
          .track-satellite
            a(href="/my-sat/track_satellite")
              button.btn.btn-light Track Satellite
                i.fa-solid.fa-satellite-dish

      //- Body content section
      block content

      //- Footer
      footer.text-white.mt-2.p-4.text-center.footer
        .row
          .col-md-4
            a.footer-anchor(href="/my-sat/about")
              h5 About Us
          .col-md-4
            h5 Contact
            ul.list-unstyled
              li Email: chienntiwuni@gmail.com
              li Phone: (233) 543328021
          .col-md-4
            h5 Follow Us
            a(href="https://web.facebook.com/profile.php?id=61559264792519" class="text-white") Facebook
            |  |
            a(href="#" class="text-white") Twitter
            |  |
            a(href="#" class="text-white") Instagram
        hr
        p &copy; 2024 My-Sat. All Rights Reserved.

      script(src="/javascripts/layout.js")
      script(src="https://kit.fontawesome.com/5aa2dc1415.js" crossorigin="anonymous")
